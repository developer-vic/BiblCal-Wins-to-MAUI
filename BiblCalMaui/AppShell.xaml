<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BiblCalMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BiblCalMaui"
    xmlns:pages="clr-namespace:BiblCalMaui.Pages"
    Title="Bibli_Cal">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Local Moon Visibility"
        ContentTemplate="{DataTemplate pages:LocalMoonVisibilityPage}"
        Route="LocalMoonVisibilityPage" />
    
    <ShellContent
        Title="Holy Days"
        ContentTemplate="{DataTemplate pages:HolyDaysPage}"
        Route="HolyDaysPage" />

</Shell>
