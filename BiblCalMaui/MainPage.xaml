<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblCalMaui.MainPage"
             BackgroundImageSource="splash.png"
             Title="Bibli_Cal">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <BoxView Opacity="0.5"
                 BackgroundColor="{StaticResource BrandColor1}"/>

        <!-- Main Content -->
        <VerticalStackLayout
            Grid.Row="0"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="30"
            Padding="40">

            <Label
                Text="Bibli_Cal"
                FontSize="32"
                FontFamily="OpenSansSemibold"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{StaticResource BrandColor2}"
                SemanticProperties.HeadingLevel="Level1"/>

            <Label
                Text="Select a tool to begin:"
                FontSize="18"
                FontFamily="OpenSansSemibold"
                HorizontalOptions="Center"
                Margin="0,10,0,20"
                TextColor="{StaticResource BrandColor4}"
                SemanticProperties.HeadingLevel="Level2"/>

            <!-- Holy Days Button -->
            <Button
                x:Name="HolyDaysButton"
                Text="Holy Days"
                FontSize="20"
                Padding="40,20"
                CornerRadius="10"
                Clicked="OnHolyDaysClicked"
                HorizontalOptions="Fill"
                BackgroundColor="{StaticResource BrandColor2}"
                TextColor="{StaticResource BrandColor1}"/>

            <!-- Moon Visibility Button -->
            <Button
                x:Name="MoonVisibilityButton"
                Text="Local Moons"
                FontSize="20"
                Padding="40,20"
                CornerRadius="10"
                Clicked="OnMoonVisibilityClicked"
                HorizontalOptions="Fill"
                BackgroundColor="{StaticResource BrandColor2}"
                TextColor="{StaticResource BrandColor1}"/>

        </VerticalStackLayout>

    </Grid>

</ContentPage>
