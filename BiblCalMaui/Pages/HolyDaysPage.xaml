<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblCalMaui.Pages.HolyDaysPage"
             Title="HOLY DAYS / NEW MOONS - www.chcpublications.net">

       <!--Give all Entry and CheckBox background RadioButton white-->
       <ContentPage.Resources>
              <ResourceDictionary>
                     <Style TargetType="Entry">
                            <Setter Property="FontSize"
                                    Value="18"/>
                     </Style>
                     <Style TargetType="Picker">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
                     <Style TargetType="CheckBox">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
                     <Style TargetType="RadioButton">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
                     <Style TargetType="Label">
                            <Setter Property="TextColor"
                                    Value="White"/>
                     </Style>
                     <!-- Input Border Style -->
                     <Style x:Key="InputBorderStyle"
                            TargetType="Border">
                            <Setter Property="StrokeThickness"
                                    Value="1"/>
                            <Setter Property="Stroke"
                                    Value="#2A2A2A"/>
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                            <Setter Property="Padding"
                                    Value="8,0"/>
                            <Setter Property="HeightRequest"
                                    Value="44"/>
                            <Setter Property="StrokeShape">
                                   <RoundRectangle CornerRadius="8"/>
                            </Setter>
                     </Style>
              </ResourceDictionary>
       </ContentPage.Resources>

       <Grid Padding="10"
             BackgroundColor="#010080">
              <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <!-- Year Input, Calculate Buttons, EJW Checkbox, and Label -->
              <Grid Grid.Row="0"
                    RowDefinitions="auto,auto"
                    ColumnDefinitions="auto,auto,auto,*,auto"
                    ColumnSpacing="15"
                    RowSpacing="15">
                     <Border Grid.Row="0"
                             Grid.Column="0"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="80">
                            <Entry x:Name="YearEntry"
                                   Placeholder="Year"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"
                                   Completed="OnYearEntryCompleted"/>
                     </Border>
                     <ImageButton x:Name="CalculateHolyDaysButton"
                                  Source="holy_days.png"
                                  Clicked="OnCalculateHolyDaysClicked"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  WidthRequest="40"
                                  HeightRequest="40"
                                  BackgroundColor="Transparent"/>
                     <ImageButton x:Name="CalculateMonthsButton"
                                  Source="local_moon.png"
                                  Clicked="OnCalculateMonthsClicked"
                                  Grid.Row="0"
                                  Grid.Column="2"
                                  WidthRequest="40"
                                  HeightRequest="40"
                                  BackgroundColor="Transparent"/>

                     <HorizontalStackLayout  Grid.Row="1"
                                             Grid.Column="0"
                                             Grid.ColumnSpan="5"
                                             Spacing="10"
                                             HorizontalOptions="End">
                            <CheckBox x:Name="EJWCheckBox"
                                      WidthRequest="20"
                                      VerticalOptions="Center"
                                      HorizontalOptions="End"
                                      CheckedChanged="OnEJWCheckBoxChanged"/>
                            <Label Text="East of Jerusalem / West of International Date Line"
                                   VerticalOptions="Center"
                                   HorizontalOptions="End"
                                   FontSize="14"/>
                     </HorizontalStackLayout>
              </Grid>

              <!-- Location Selector -->
              <Grid Grid.Row="1"
                    HorizontalOptions="Center"
                    RowDefinitions="auto"
                    ColumnDefinitions="auto,auto,auto,*"
                    ColumnSpacing="10"
                    Margin="0,15,0,0">
                     <RadioButton x:Name="JerusalemRadioButton"
                                  Grid.Column="1"
                                  VerticalOptions="Center"
                                  IsChecked="True"
                                  CheckedChanged="OnLocationRadioButtonChanged">
                            <RadioButton.Content>
                                   <Label Text="Jerusalem (default)"
                                          TextColor="Black"
                                          VerticalOptions="Center"/>
                            </RadioButton.Content>
                     </RadioButton>
                     <RadioButton x:Name="CustomLocationRadioButton"
                                  Grid.Column="2"
                                  VerticalOptions="Center"
                                  CheckedChanged="OnLocationRadioButtonChanged">
                            <RadioButton.Content>
                                   <Label Text="Custom Location"
                                          TextColor="Black"
                                          VerticalOptions="Center"/>
                            </RadioButton.Content>
                     </RadioButton>
              </Grid>

              <!-- Custom Location Inputs (hidden by default) -->
              <Grid x:Name="CustomLocationGrid"
                    Grid.Row="2"
                    RowDefinitions="auto,auto"
                    IsVisible="False"
                    Margin="0,10,0,0">
                     <!-- Location Entry -->
                     <Grid Grid.Row="0"
                           RowDefinitions="Auto,Auto"
                           ColumnSpacing="5">
                            <Border Grid.Row="0"
                                    Style="{StaticResource InputBorderStyle}">
                                   <Entry x:Name="LocationEntry"
                                          Placeholder="Select or enter location name"
                                          Completed="OnLocationEntryCompleted"
                                          TextChanged="OnLocationEntryTextChanged"
                                          Focused="OnLocationEntryFocused"
                                          Unfocused="OnLocationEntryUnfocused"
                                          BackgroundColor="Transparent"
                                          VerticalOptions="Center"/>
                            </Border>
                            <Label Text="To edit, add or delete a location (Press ENTER after the location name)"
                                   Grid.Row="1"
                                   FontSize="10"
                                   TextColor="White"
                                   Margin="5,2,0,0"/>
                     </Grid>

                     <!-- Overlay Dropdown - positioned absolutely to overlay other controls -->
                     <Border x:Name="LocationDropdown"
                             Grid.Row="0"
                             Grid.RowSpan="2"
                             StrokeThickness="1"
                             Stroke="Gray"
                             IsVisible="False"
                             MaximumHeightRequest="200"
                             ZIndex="1000"
                             HorizontalOptions="Start"
                             VerticalOptions="Start"
                             Margin="0,40,0,0">
                            <CollectionView x:Name="LocationDropdownList"
                                            SelectionMode="Single"
                                            HeightRequest="200"
                                            SelectionChanged="OnLocationDropdownItemSelected"
                                            BackgroundColor="White">
                                   <CollectionView.ItemTemplate>
                                          <DataTemplate>
                                                 <Grid Padding="10,7">
                                                        <Label Text="{Binding Name}"
                                                               FontSize="15"
                                                               TextColor="Black"
                                                               VerticalOptions="Center"/>
                                                 </Grid>
                                          </DataTemplate>
                                   </CollectionView.ItemTemplate>
                            </CollectionView>
                     </Border>

                     <!-- Coordinate Inputs -->
                     <Grid Grid.Row="1"
                           HorizontalOptions="Center"
                           RowDefinitions="Auto,Auto,Auto,Auto"
                           ColumnDefinitions="auto,auto,auto,auto,auto,auto,auto"
                           ColumnSpacing="5"
                           RowSpacing="5"
                           Margin="0,10,0,0">
                            <!-- Labels -->
                            <Label Text="Latitude"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                            <Label Text="Longitude"
                                   Grid.Row="0"
                                   Grid.Column="4"
                                   Grid.ColumnSpan="3"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Center"/>
                            <!-- Latitude -->
                            <Border Grid.Column="0"
                                    Grid.Row="1"
                                    Style="{StaticResource InputBorderStyle}"
                                    WidthRequest="60">
                                   <Entry x:Name="LatDegEntry"
                                          Placeholder="Deg"
                                          Keyboard="Numeric"
                                          BackgroundColor="Transparent"
                                          VerticalOptions="Center"/>
                            </Border>
                            <Border Grid.Column="1"
                                    Grid.Row="1"
                                    Style="{StaticResource InputBorderStyle}"
                                    WidthRequest="60">
                                   <Entry x:Name="LatMinEntry"
                                          Placeholder="Min"
                                          Keyboard="Numeric"
                                          BackgroundColor="Transparent"
                                          VerticalOptions="Center"/>
                            </Border>
                            <Border Grid.Column="2"
                                    Grid.Row="1"
                                    Style="{StaticResource InputBorderStyle}"
                                    WidthRequest="60">
                                   <Grid ColumnDefinitions="*,Auto">
                                          <Picker x:Name="LatDirPicker"
                                                  Grid.Column="0"
                                                  BackgroundColor="Transparent"
                                                  VerticalOptions="Center">
                                                 <Picker.ItemsSource>
                                                        <x:Array Type="{x:Type x:String}">
                                                               <x:String>N</x:String>
                                                               <x:String>S</x:String>
                                                        </x:Array>
                                                 </Picker.ItemsSource>
                                          </Picker>
                                          <Image x:Name="LatDirDropdownIcon"
                                                 Source="dropdown.png"
                                                 Grid.Column="1"
                                                 WidthRequest="20"
                                                 HeightRequest="20"
                                                 VerticalOptions="Center"
                                                 Margin="5,0,0,0">
                                                 <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnLatDirDropdownTapped"/>
                                                 </Image.GestureRecognizers>
                                          </Image>
                                   </Grid>
                            </Border>
                            <!-- Spacing -->
                            <BoxView Grid.Column="3"
                                     Grid.Row="1"
                                     BackgroundColor="Transparent"
                                     WidthRequest="10"/>
                            <!-- Longitude -->
                            <Border Grid.Column="4"
                                    Grid.Row="1"
                                    Style="{StaticResource InputBorderStyle}"
                                    WidthRequest="60">
                                   <Entry x:Name="LongDegEntry"
                                          Placeholder="Deg"
                                          Keyboard="Numeric"
                                          BackgroundColor="Transparent"
                                          VerticalOptions="Center"/>
                            </Border>
                            <Border Grid.Column="5"
                                    Grid.Row="1"
                                    Style="{StaticResource InputBorderStyle}"
                                    WidthRequest="60">
                                   <Entry x:Name="LongMinEntry"
                                          Placeholder="Min"
                                          Keyboard="Numeric"
                                          BackgroundColor="Transparent"
                                          VerticalOptions="Center"/>
                            </Border>
                            <Border Grid.Column="6"
                                    Grid.Row="1"
                                    Style="{StaticResource InputBorderStyle}"
                                    WidthRequest="60">
                                   <Grid ColumnDefinitions="*,Auto">
                                          <Picker x:Name="LongDirPicker"
                                                  Grid.Column="0"
                                                  BackgroundColor="Transparent"
                                                  VerticalOptions="Center">
                                                 <Picker.ItemsSource>
                                                        <x:Array Type="{x:Type x:String}">
                                                               <x:String>E</x:String>
                                                               <x:String>W</x:String>
                                                        </x:Array>
                                                 </Picker.ItemsSource>
                                          </Picker>
                                          <Image x:Name="LongDirDropdownIcon"
                                                 Source="dropdown.png"
                                                 Grid.Column="1"
                                                 WidthRequest="20"
                                                 HeightRequest="20"
                                                 VerticalOptions="Center"
                                                 Margin="5,0,0,0">
                                                 <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnLongDirDropdownTapped"/>
                                                 </Image.GestureRecognizers>
                                          </Image>
                                   </Grid>
                            </Border>

                            <!-- GMT Offset -->
                            <Label Text="UTC/GMT"
                                   Grid.Row="3"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="3"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"/>
                            <Border Grid.Row="3"
                                    Grid.Column="3"
                                    Grid.ColumnSpan="3"
                                    HorizontalOptions="Start"
                                    Style="{StaticResource InputBorderStyle}"
                                    WidthRequest="60">
                                   <Entry x:Name="GMTOffsetEntry"
                                          Placeholder="2"
                                          Keyboard="Numeric"
                                          BackgroundColor="Transparent"
                                          VerticalOptions="Center"/>
                            </Border>
                     </Grid>
              </Grid>

              <!-- Results -->
              <Border Grid.Row="3"
                      StrokeThickness="3"
                      Stroke="LightGray"
                      BackgroundColor="White"
                      Padding="5"
                      Margin="0,5,0,0">
                     <ScrollView Orientation="Both">
                            <Label x:Name="ResultsLabel"
                                   TextColor="Black"
                                   FontSize="16"
                                   FontFamily="Courier"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"/>
                     </ScrollView>
              </Border>

       </Grid>

</ContentPage>
