<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BiblCalMaui.Pages.LocalMoonVisibilityPage"
             Title="LOCAL NEW MOONS - www.chcpublications.net">

       <!--Give all Entry and Picker background white-->
       <ContentPage.Resources>
              <ResourceDictionary>
                     <Style TargetType="Entry">
                            <Setter Property="FontSize"
                                    Value="18"/>
                     </Style>
                     <Style TargetType="Picker">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
                     <Style TargetType="CheckBox">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
                     <Style TargetType="RadioButton">
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                     </Style>
                     <Style TargetType="Label">
                            <Setter Property="TextColor"
                                    Value="White"/>
                     </Style>
                     <!-- Input Border Style -->
                     <Style x:Key="InputBorderStyle"
                            TargetType="Border">
                            <Setter Property="StrokeThickness"
                                    Value="1"/>
                            <Setter Property="Stroke"
                                    Value="#2A2A2A"/>
                            <Setter Property="BackgroundColor"
                                    Value="White"/>
                            <Setter Property="Padding"
                                    Value="8,0"/>
                            <Setter Property="HeightRequest"
                                    Value="44"/>
                            <Setter Property="StrokeShape">
                                   <RoundRectangle CornerRadius="8"/>
                            </Setter>
                     </Style>
              </ResourceDictionary>
       </ContentPage.Resources>

       <Grid Padding="10"
             BackgroundColor="#010080">
              <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
              </Grid.RowDefinitions>

              <!-- Year Input and Calculate Button, and Location on Same Row -->
              <Grid Grid.Row="0"
                    RowDefinitions="auto"
                    ColumnDefinitions="auto,auto,*"
                    ColumnSpacing="5"
                    RowSpacing="10">
                     <Border Grid.Row="0"
                             Grid.Column="0"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="80">
                            <Entry x:Name="YearEntry"
                                   Placeholder="Year"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"/>
                     </Border>
                     <ImageButton x:Name="CalculateButton"
                                  Source="local_moon.png"
                                  Clicked="OnCalculateClicked"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  WidthRequest="40"
                                  HeightRequest="40"
                                  BackgroundColor="Transparent"/>
                     <Grid Grid.Row="0"
                           Grid.Column="2"
                           RowDefinitions="Auto,Auto">
                            <Border Grid.Row="0"
                                    Style="{StaticResource InputBorderStyle}">
                                   <Entry x:Name="LocationEntry"
                                          Placeholder="Select or enter location name"
                                          Completed="OnLocationEntryCompleted"
                                          TextChanged="OnLocationEntryTextChanged"
                                          Focused="OnLocationEntryFocused"
                                          Unfocused="OnLocationEntryUnfocused"
                                          BackgroundColor="Transparent"
                                          VerticalOptions="Center"/>
                            </Border>
                            <Label Text="To edit, add or delete a location (Press ENTER after the location name)"
                                   Grid.Row="1"
                                   FontSize="10"
                                   TextColor="White"
                                   Margin="5,2,0,0"/>
                     </Grid>
              </Grid>

              <!-- Overlay Dropdown - positioned absolutely to overlay other controls -->
              <Border x:Name="LocationDropdown"
                      Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="2"
                      StrokeThickness="1"
                      Stroke="Gray"
                      BackgroundColor="White"
                      IsVisible="False"
                      MaximumHeightRequest="200"
                      ZIndex="1000"
                      HorizontalOptions="Start"
                      VerticalOptions="Start"
                      Margin="120,40,0,0">
                     <CollectionView x:Name="LocationDropdownList"
                                     SelectionMode="Single"
                                     SelectionChanged="OnLocationDropdownItemSelected"
                                     BackgroundColor="White">
                            <CollectionView.ItemTemplate>
                                   <DataTemplate>
                                          <Grid Padding="10,5">
                                                 <Label Text="{Binding Name}"
                                                        FontSize="16"
                                                        TextColor="Black"
                                                        VerticalOptions="Center"/>
                                          </Grid>
                                   </DataTemplate>
                            </CollectionView.ItemTemplate>
                     </CollectionView>
              </Border>

              <!-- Latitude Inputs -->
              <Grid Grid.Row="1"
                    ColumnDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,auto"
                    ColumnSpacing="5"
                    RowDefinitions="Auto,Auto"
                    Margin="0,15,0,0">
                     <!-- Latitude -->
                     <Border Grid.Column="0"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="60">
                            <Entry x:Name="LatDegEntry"
                                   Placeholder="Deg"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border Grid.Column="1"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="60">
                            <Entry x:Name="LatMinEntry"
                                   Placeholder="Min"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border Grid.Column="2"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="70">
                            <Grid ColumnDefinitions="*,Auto">
                                   <Picker x:Name="LatDirPicker"
                                           Grid.Column="0"
                                           BackgroundColor="Transparent"
                                           VerticalOptions="Center">
                                          <Picker.ItemsSource>
                                                 <x:Array Type="{x:Type x:String}">
                                                        <x:String>N</x:String>
                                                        <x:String>S</x:String>
                                                 </x:Array>
                                          </Picker.ItemsSource>
                                   </Picker>
                                   <Image x:Name="LatDirDropdownIcon"
                                          Source="dropdown.png"
                                          Grid.Column="1"
                                          WidthRequest="20"
                                          HeightRequest="20"
                                          VerticalOptions="Center"
                                          Margin="5,0,0,0">
                                          <Image.GestureRecognizers>
                                                 <TapGestureRecognizer Tapped="OnLatDirDropdownTapped"/>
                                          </Image.GestureRecognizers>
                                   </Image>
                            </Grid>
                     </Border>
                     <!-- Spacing -->
                     <BoxView Grid.Column="3"
                              BackgroundColor="Transparent"
                              WidthRequest="10"/>
                     <!-- Longitude -->
                     <Border Grid.Column="4"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="60">
                            <Entry x:Name="LongDegEntry"
                                   Placeholder="Deg"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border Grid.Column="5"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="60">
                            <Entry x:Name="LongMinEntry"
                                   Placeholder="Min"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"/>
                     </Border>
                     <Border Grid.Column="6"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="70">
                            <Grid ColumnDefinitions="*,Auto">
                                   <Picker x:Name="LongDirPicker"
                                           Grid.Column="0"
                                           BackgroundColor="Transparent"
                                           VerticalOptions="Center">
                                          <Picker.ItemsSource>
                                                 <x:Array Type="{x:Type x:String}">
                                                        <x:String>E</x:String>
                                                        <x:String>W</x:String>
                                                 </x:Array>
                                          </Picker.ItemsSource>
                                   </Picker>
                                   <Image x:Name="LongDirDropdownIcon"
                                          Source="dropdown.png"
                                          Grid.Column="1"
                                          WidthRequest="20"
                                          HeightRequest="20"
                                          VerticalOptions="Center"
                                          Margin="5,0,0,0">
                                          <Image.GestureRecognizers>
                                                 <TapGestureRecognizer Tapped="OnLongDirDropdownTapped"/>
                                          </Image.GestureRecognizers>
                                   </Image>
                            </Grid>
                     </Border>
                     <!-- Spacing -->
                     <BoxView Grid.Column="7"
                              BackgroundColor="Transparent"
                              WidthRequest="10"/>
                     <!-- GMT Offset -->
                     <Border Grid.Column="8"
                             Grid.Row="0"
                             Style="{StaticResource InputBorderStyle}"
                             WidthRequest="60">
                            <Entry x:Name="GMTOffsetEntry"
                                   Placeholder="2"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   VerticalOptions="Center"/>
                     </Border>
                     <!-- Labels -->
                     <Label Text="Latitude"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            VerticalOptions="Center"/>
                     <Label Text="Longitude"
                            Grid.Row="1"
                            Grid.Column="4"
                            Grid.ColumnSpan="3"
                            VerticalOptions="Center"/>
                     <Label Text="UTC/GMT"
                            Grid.Row="1"
                            Grid.Column="8"
                            VerticalOptions="Center"/>
              </Grid>

              <!-- Results -->
              <Border Grid.Row="2"
                      StrokeThickness="3"
                      Stroke="LightGray"
                      BackgroundColor="White"
                      Padding="5"
                      Margin="0,15,0,0">
                     <ScrollView HeightRequest="700"
                                 Orientation="Vertical">
                            <Label x:Name="ResultsLabel"
                                   TextColor="Black"
                                   FontSize="16"
                                   FontFamily="Courier"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"/>
                     </ScrollView>
              </Border>

       </Grid>

</ContentPage>

